FROM eclipse-temurin:17-jdk

# Install necessary tools for code execution
RUN apt-get update && \
    apt-get install -y \
    python3 \
    python3-pip \
    nodejs \
    npm \
    gcc \
    g++ \
    bash \
    coreutils \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the entire backend directory
COPY . .

# Build the application
RUN ./mvnw clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the application
ENTRYPOINT ["java", "-jar", "target/*.jar"]
